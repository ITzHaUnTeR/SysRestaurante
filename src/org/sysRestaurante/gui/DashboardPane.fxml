<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sysRestaurante.gui.DashbordController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <BorderPane fx:id="borderPane" prefHeight="720.0" prefWidth="900.0">
         <top>
            <HBox BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="1.0" right="1.0" top="1.0" />
               </BorderPane.margin>
               <children>
                  <Label fx:id="userLabel" opacity="0.7" text="Bem vindo, Adminstrador">
                     <font>
                        <Font name="Carlito Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </padding>
            </HBox>
         </top>
         <center>
            <VBox spacing="10.0" styleClass="box-content">
               <children>
                  <VBox alignment="TOP_RIGHT">
                     <children>
                        <Label text="Resumo diário">
                           <font>
                              <Font name="Carlito" size="39.0" />
                           </font>
                        </Label>
                        <Label opacity="0.71" text="Prato do dia: A definir">
                           <font>
                              <Font name="Carlito Bold" size="20.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <BorderPane.margin>
                  <Insets bottom="5.0" left="1.0" right="5.0" top="5.0" />
               </BorderPane.margin>
            </VBox>
         </center>
         <right>
            <VBox spacing="5.0" styleClass="box-content" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="5.0" right="1.0" top="5.0" />
               </BorderPane.margin>
               <children>
                  <VBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label text="Observações:" underline="true">
                           <font>
                              <Font name="Cantarell Regular" size="23.0" />
                           </font>
                        </Label>
                        <CheckBox indeterminate="true" mnemonicParsing="false" prefWidth="150.0" text="Saulo abriu o caixa no dia 01/01/2020" wrapText="true">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </CheckBox>
                        <CheckBox mnemonicParsing="false" prefWidth="150.0" text="Caixa com saldo negativo" wrapText="true">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </CheckBox>
                        <CheckBox mnemonicParsing="false" prefWidth="150.0" selected="true" text="Comprar suco de uva" wrapText="true">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </CheckBox>
                        <CheckBox mnemonicParsing="false" prefWidth="150.0" text="Verificar estoque de refrigerante" wrapText="true">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </CheckBox>
                        <Pane VBox.vgrow="ALWAYS" />
                        <HBox alignment="TOP_CENTER" spacing="5.0">
                           <children>
                              <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="80.0" text="Adicionar observação" wrapText="true" />
                              <Pane HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="80.0" text="Limpar" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: green; -fx-background-radius: 5px;">
                     <children>
                        <Label text="CAIXA ABERTO" textFill="WHITE">
                           <font>
                              <Font name="Carlito" size="21.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </right>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </BorderPane>
   </children>
    <stylesheets>
        <URL value="@css/menu.css" />
       <URL value="@css/controls.css" />
    </stylesheets>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</GridPane>
