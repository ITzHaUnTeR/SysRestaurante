<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="noteWindow" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sysRestaurante.gui.NotePaneController">
   <children>
      <TextArea fx:id="textNote" prefHeight="124.0" prefWidth="219.0" promptText="Adiciona aqui sua observação">
         <font>
            <Font size="16.0" />
         </font>
      </TextArea>
      <VBox alignment="BOTTOM_LEFT" spacing="5.0">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="confirmNote" mnemonicParsing="false" onAction="#addNote" prefHeight="45.0" prefWidth="90.0" text="Adicionar nota" textAlignment="CENTER" wrapText="true" />
                  <Button fx:id="cancelNote" mnemonicParsing="false" onAction="#cancel" prefHeight="45.0" prefWidth="90.0" text="Cancelar" />
               </children>
            </HBox>
            <CheckBox fx:id="isPermanentNote" mnemonicParsing="false" selected="true" text="Tornar permanente">
               <tooltip>
                  <Tooltip text="Salvar anotação para vê-la mesmo depois de encerrar o programa." />
               </tooltip></CheckBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
