<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="554.0" prefWidth="568.0" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefHeight="165.0" prefWidth="670.0" spacing="5.0">
         <children>
            <VBox prefHeight="100.0" prefWidth="600.0" style="-fx-border-color: #dddddd;" HBox.hgrow="ALWAYS">
               <children>
                  <HBox style="-fx-background-color: #dddddd;">
                     <children>
                        <Label fx:id="tableLabel" text="MESA #012">
                           <font>
                              <Font name="Carlito Bold" size="22.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label minWidth="125.0" prefWidth="125.0" text="Tempo:">
                           <font>
                              <Font name="Carlito Bold" size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="timeLabel" maxHeight="200.0" text="--">
                           <font>
                              <Font name="Carlito Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label minWidth="90.0" prefWidth="125.0" text="Cliente:">
                           <font>
                              <Font name="Carlito Bold" size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="customerLabel" maxWidth="200.0" text="--">
                           <font>
                              <Font name="Carlito Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label minWidth="125.0" prefWidth="125.0" text="Cod. comanda:">
                           <font>
                              <Font name="Carlito Bold" size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="codComandaLabel" text="--">
                           <font>
                              <Font name="Carlito Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label minWidth="125.0" prefWidth="125.0" text="Subtotal:">
                           <font>
                              <Font name="Carlito Bold" size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="totalLabel" maxHeight="200.0" text="--">
                           <font>
                              <Font name="Carlito Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox prefHeight="100.0" prefWidth="600.0" spacing="5.0" style="-fx-border-color: #dddddd;" HBox.hgrow="ALWAYS">
               <children>
                  <HBox style="-fx-background-color: #dddddd;">
                     <children>
                        <Label text="Cod. do pedido: ">
                           <font>
                              <Font name="Carlito Bold" size="22.0" />
                           </font>
                        </Label>
                        <Label fx:id="codOrderLabel" text="--">
                           <font>
                              <Font name="Carlito Bold" size="22.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </HBox>
                  <ComboBox fx:id="employeeComboBox" prefHeight="35.0" prefWidth="1000.0" promptText="Atendente">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                     <styleClass>
                        <String fx:value="combo-box-view" />
                        <String fx:value="view" />
                     </styleClass>
                  </ComboBox>
                  <TextField fx:id="customerBox" prefHeight="35.0" promptText="Nome do cliente" styleClass="combo-box-view">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" top="3.0" />
                     </VBox.margin>
                  </TextField>
                  <HBox spacing="5.0">
                     <children>
                        <Button fx:id="changeTableButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="600.0" text="Trocar mesa" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Carlito" size="16.0" />
                           </font>
                           <styleClass>
                              <String fx:value="view" />
                              <String fx:value="combo-box-view" />
                           </styleClass>
                        </Button>
                        <Button fx:id="cancelOrderButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="600.0" text="Cancelar pedido" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Carlito" size="16.0" />
                           </font>
                           <tooltip>
                              <Tooltip text="Clique para cancelar pedido" />
                           </tooltip>
                           <styleClass>
                              <String fx:value="view" />
                              <String fx:value="combo-box-view" />
                           </styleClass>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox prefHeight="200.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="selectedProductsTableView" editable="true" prefHeight="144.0" VBox.vgrow="ALWAYS">
               <placeholder>
                  <Label opacity="0.7" text="O carrinho está vazio" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="Carlito Bold" size="20" />
                     </font>
                  </Label>
               </placeholder>
               <columns>
                  <TableColumn fx:id="descriptionColumn" editable="false" minWidth="-1.0" prefWidth="161.0" text="Descrição do produto" />
                  <TableColumn fx:id="priceColumn" editable="false" minWidth="-Infinity" text="Preço" />
                  <TableColumn fx:id="qtdColumn" prefWidth="70.0" text="Qtd" />
                  <TableColumn fx:id="totalColumn" editable="false" minWidth="-1.0" prefWidth="88.0" text="Total" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="1.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
      <VBox alignment="TOP_RIGHT" prefHeight="57.0" prefWidth="558.0" style="-fx-background-color: black; -fx-border-color: gray; -fx-border-width: 2;">
         <children>
            <Label text="Subtotal" textFill="#77d14db2">
               <font>
                  <Font name="Cantarell Regular" size="15.0" />
               </font>
            </Label>
            <Label fx:id="subtotalLabel" text="R$ 54,90" textFill="#78d34e">
               <font>
                  <Font name="Cantarell Regular" size="27.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER_LEFT" prefWidth="670.0" spacing="5.0" style="-fx-border-color: #dddddd;">
         <children>
            <Button fx:id="removeButton" minWidth="100.0" mnemonicParsing="false" prefHeight="35.0" text="Sair">
               <font>
                  <Font name="Carlito" size="16.0" />
               </font>
               <tooltip>
                  <Tooltip id="Voc" text="Você também pode pressionar o atalho F3 para abrir a lista de produtos" />
               </tooltip>
               <styleClass>
                  <String fx:value="view" />
                  <String fx:value="combo-box-view" />
               </styleClass>
            </Button>
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="clearButton" minWidth="100.0" mnemonicParsing="false" prefHeight="35.0" text="Salvar">
               <font>
                  <Font name="Carlito" size="16.0" />
               </font>
               <tooltip>
                  <Tooltip id="Voc" text="Você também pode pressionar o atalho F3 para abrir a lista de produtos" />
               </tooltip>
               <styleClass>
                  <String fx:value="view" />
                  <String fx:value="combo-box-view" />
               </styleClass>
            </Button>
            <Button fx:id="removeButton1" minWidth="100.0" mnemonicParsing="false" prefHeight="35.0" text="Recibo">
               <font>
                  <Font name="Carlito" size="16.0" />
               </font>
               <tooltip>
                  <Tooltip id="Voc" text="Você também pode pressionar o atalho F3 para abrir a lista de produtos" />
               </tooltip>
               <styleClass>
                  <String fx:value="view" />
                  <String fx:value="combo-box-view" />
               </styleClass>
            </Button>
            <Button fx:id="clearButton1" minWidth="100.0" mnemonicParsing="false" prefHeight="35.0" text="Imprimir">
               <font>
                  <Font name="Carlito" size="16.0" />
               </font>
               <tooltip>
                  <Tooltip id="Voc" text="Você também pode pressionar o atalho F3 para abrir a lista de produtos" />
               </tooltip>
               <styleClass>
                  <String fx:value="view" />
                  <String fx:value="combo-box-view" />
               </styleClass>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../css/menu.css" />
      <URL value="@../css/controls.css" />
   </stylesheets>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
