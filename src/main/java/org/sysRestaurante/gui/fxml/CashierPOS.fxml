<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="wrapperBox" prefHeight="600.0" prefWidth="1090.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sysRestaurante.gui.CashierPOSController">
   <center>
       <VBox spacing="5.0" BorderPane.alignment="BOTTOM_CENTER">
           <BorderPane.margin>
               <Insets left="5.0" right="5.0"/>
           </BorderPane.margin>
           <Label text="Lista de produtos">
              <font>
                  <Font name="Carlito Bold" size="20.0"/>
              </font>
           </Label>
           <Separator prefWidth="200.0"/>
           <HBox prefWidth="350.0" spacing="10.0">
               <TextField fx:id="searchBox" prefHeight="31.0" promptText="Pesquisar produto"
                          style="-fx-border-color: #CBCBCC; -fx-background-radius: 2; -fx-border-width: 2; -fx-border-radius: 2;"
                          HBox.hgrow="ALWAYS"/>
           </HBox>
           <Separator prefWidth="200.0"/>
           <ListView fx:id="productsListView"
                     style="-fx-faint-focus-color: transparent; -fx-focus-color: transparent; -fx-border-color: #dddddd;"
                     VBox.vgrow="ALWAYS">
              <placeholder>
                  <VBox alignment="TOP_CENTER" spacing="5">
                      <padding>
                          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                      </padding>
                      <Label opacity="0.7" text="Nenhum produto encontrado com essa descrição." textAlignment="CENTER"
                             wrapText="true">
                          <font>
                              <Font name="Carlito" size="18"/>
                          </font>
                      </Label>
                      <Label opacity="0.7" text="Pressione F3 para começar a fazer uma nova busca rápida."
                             textAlignment="CENTER" wrapText="true">
                          <font>
                              <Font name="Carlito Bold" size="18"/>
                          </font>
                      </Label>
                  </VBox>
              </placeholder>
              <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
              </padding>
           </ListView>
           <Separator/>
           <VBox fx:id="detailsWrapperBox" prefWidth="469.0" spacing="5.0" VBox.vgrow="NEVER">
               <VBox.margin>
                   <Insets/>
               </VBox.margin>
               <padding>
                   <Insets bottom="5.0"/>
               </padding>
               <Label text="Detalhes">
                   <font>
                       <Font name="Carlito Bold" size="20.0"/>
                   </font>
               </Label>
               <Separator/>
               <VBox style="-fx-border-color: #CBCBCC;">
                   <HBox prefWidth="467.0" spacing="5.0">
                       <VBox.margin>
                           <Insets bottom="5.0"/>
                       </VBox.margin>
                       <padding>
                           <Insets left="5.0" right="5.0"/>
                       </padding>
                       <VBox prefWidth="267.0" HBox.hgrow="ALWAYS">
                           <Label fx:id="contentLabel" alignment="TOP_LEFT" prefHeight="65.0" prefWidth="268.0"
                                  text="Coca-cola 2L Garrafa retornável" wrapText="true" VBox.vgrow="ALWAYS">
                               <font>
                                   <Font name="Carlito Bold" size="16.0"/>
                               </font>
                           </Label>
                           <HBox alignment="CENTER">
                               <Label text="Preço unit." HBox.hgrow="ALWAYS">
                                   <font>
                                       <Font name="Carlito" size="15.0"/>
                                   </font>
                               </Label>
                               <Pane prefWidth="120.0" HBox.hgrow="ALWAYS"/>
                               <Label fx:id="unitPriceLabel" text="R$ 5,50">
                                   <font>
                                       <Font name="Cantarell Bold" size="17.0"/>
                                   </font>
                               </Label>
                           </HBox>
                       </VBox>
                       <Pane HBox.hgrow="ALWAYS"/>
                       <VBox>
                           <Label text="Qtd">
                               <font>
                                   <Font name="Carlito Bold" size="16.0"/>
                               </font>
                           </Label>
                           <Pane VBox.vgrow="ALWAYS"/>
                           <Spinner fx:id="qtySpinner" minHeight="-Infinity" opacity="0.8" prefHeight="31.0"
                                    prefWidth="72.0"/>
                       </VBox>
                       <VBox alignment="BOTTOM_CENTER">
                           <Button fx:id="addProductButton" mnemonicParsing="false" opacity="0.65"
                                   prefHeight="31.0" prefWidth="100.0" text="Adicionar">
                               <font>
                                   <Font name="Carlito" size="15.0"/>
                               </font>
                           </Button>
                       </VBox>
                   </HBox>
                   <Separator prefWidth="200.0"/>
                   <HBox alignment="CENTER" prefWidth="467.0">
                       <padding>
                           <Insets left="5.0" right="5.0" top="-2.0"/>
                       </padding>
                       <VBox prefWidth="127.0" HBox.hgrow="ALWAYS">
                           <Label text="Cod. do produto">
                               <font>
                                   <Font name="Carlito Bold" size="18.0"/>
                               </font>
                           </Label>
                           <Label fx:id="codProductLabel" text="5444">
                               <font>
                                   <Font name="Carlito" size="15.0"/>
                               </font>
                           </Label>
                       </VBox>
                       <Separator orientation="VERTICAL"/>
                       <VBox alignment="TOP_CENTER" prefWidth="116.0" HBox.hgrow="ALWAYS">
                           <Label text="Categoria">
                               <font>
                                   <Font name="Carlito Bold" size="18.0"/>
                               </font>
                           </Label>
                           <Label fx:id="categoryLabel" text="Bebidas">
                               <font>
                                   <Font name="Carlito" size="15.0"/>
                               </font>
                           </Label>
                       </VBox>
                   </HBox>
               </VBox>
           </VBox>
       </VBox>
   </center>
   <right>
       <VBox alignment="TOP_CENTER" spacing="5.0" BorderPane.alignment="CENTER">
           <BorderPane.margin>
               <Insets bottom="5.0"/>
           </BorderPane.margin>
           <VBox alignment="TOP_RIGHT" spacing="5.0" VBox.vgrow="ALWAYS">
               <Label text="Opções de venda">
                   <font>
                       <Font name="Carlito Bold" size="20.0"/>
                   </font>
               </Label>
               <Separator prefWidth="200.0"/>
               <VBox fx:id="finalizeSell" alignment="CENTER" onMouseClicked="#onFinalizeOrder" prefHeight="50.0"
                     style="-fx-background-color: #58996A; -fx-background-radius: 5; -fx-cursor: hand;">
                   <padding>
                       <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                   </padding>
                   <Label styleClass="cashier-text" text="Finalizar venda (F2)"
                          textAlignment="CENTER" textFill="WHITE" wrapText="true">
                       <font>
                           <Font name="Carlito Bold" size="16.0"/>
                       </font>
                   </Label>
               </VBox>
               <VBox fx:id="cancelButton" alignment="CENTER" prefHeight="30.0"
                     style="-fx-background-color: rgba(250,89,89,1); -fx-background-radius: 5; -fx-cursor: hand;">
                   <padding>
                       <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                   </padding>
                   <Label styleClass="cashier-text" text="Cancelar (F4)"
                          textAlignment="CENTER" textFill="WHITE" wrapText="true">
                       <font>
                           <Font name="Carlito Bold" size="16.0"/>
                       </font>
                   </Label>
               </VBox>
               <Separator prefWidth="200.0"/>
               <Label text="Pagamento">
                   <font>
                       <Font name="Carlito Bold" size="20.0"/>
                   </font>
               </Label>
               <Separator prefWidth="200.0"/>
               <HBox disable="true" spacing="22.0">
                   <CheckBox mnemonicParsing="false" selected="true" text="Dinheiro">
                       <font>
                           <Font name="Carlito" size="15.0"/>
                       </font>
                   </CheckBox>
                   <CheckBox mnemonicParsing="false" text="Cartão">
                       <font>
                           <Font name="Carlito" size="15.0"/>
                       </font>
                   </CheckBox>
               </HBox>
               <Separator prefWidth="200.0"/>
               <Label text="Nota fiscal">
                   <font>
                       <Font name="Carlito Bold" size="20.0"/>
                   </font>
               </Label>
               <Separator prefWidth="200.0"/>
               <HBox prefHeight="30.0" spacing="5.0">
                   <VBox alignment="CENTER" disable="true" prefWidth="20.0" styleClass="cashier-button"
                         HBox.hgrow="ALWAYS">
                       <padding>
                           <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                       </padding>
                       <Label styleClass="cashier-text" text="Emitir nota"
                              textAlignment="CENTER" wrapText="true">
                           <font>
                               <Font name="Carlito Bold" size="14.0"/>
                           </font>
                       </Label>
                   </VBox>
                   <VBox alignment="CENTER" disable="true" prefWidth="20.0" styleClass="cashier-button"
                         HBox.hgrow="ALWAYS">
                       <padding>
                           <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                       </padding>
                       <Label styleClass="cashier-text" text="Imprimir"
                              textAlignment="CENTER" wrapText="true">
                           <font>
                               <Font name="Carlito Bold" size="14.0"/>
                           </font>
                       </Label>
                   </VBox>
               </HBox>
               <Separator prefWidth="200.0"/>
           </VBox>
       </VBox>
   </right>
   <left>
       <VBox spacing="5.0" BorderPane.alignment="CENTER">
           <BorderPane.margin>
               <Insets bottom="5.0"/>
           </BorderPane.margin>
           <Label text="Itens no carrinho">
              <font>
                  <Font name="Carlito Bold" size="20.0"/>
              </font>
           </Label>
           <Separator prefWidth="200.0"/>
           <TableView fx:id="selectedProductsTableView" editable="true" prefHeight="144.0" VBox.vgrow="ALWAYS">
              <placeholder>
                  <Label opacity="0.7" text="O carrinho está vazio" textAlignment="CENTER" wrapText="true">
                      <font>
                          <Font name="Carlito Bold" size="20"/>
                      </font>
                  </Label>
              </placeholder>
              <columns>
                  <TableColumn fx:id="descriptionColumn" editable="false" minWidth="-1.0" prefWidth="161.0"
                               text="Descrição do produto"/>
                  <TableColumn fx:id="priceColumn" editable="false" minWidth="-Infinity" text="Preço"/>
                  <TableColumn fx:id="qtdColumn" prefWidth="70.0" text="Qtd"/>
                  <TableColumn fx:id="totalColumn" editable="false" minWidth="-1.0" prefWidth="88.0" text="Total"/>
              </columns>
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
              </columnResizePolicy>
              <VBox.margin>
                  <Insets bottom="1.0"/>
              </VBox.margin>
           </TableView>
           <HBox prefHeight="30.0" spacing="5.0">
               <Button fx:id="removeButton" mnemonicParsing="false" onMouseClicked="#removeItem" opacity="0.65"
                       prefHeight="31.0" prefWidth="100.0" text="Remover">
                   <font>
                       <Font name="Carlito" size="15.0"/>
                   </font>
               </Button>
               <Pane HBox.hgrow="ALWAYS"/>
               <Button fx:id="clearButton" mnemonicParsing="false" opacity="0.65" prefHeight="31.0" prefWidth="100.0"
                       text="Limpar">
                   <font>
                       <Font name="Carlito" size="15.0"/>
                   </font>
               </Button>
           </HBox>
           <Separator/>
           <VBox alignment="BOTTOM_RIGHT" prefHeight="98.0" prefWidth="400.0"
                 style="-fx-background-color: black; -fx-border-color: gray; -fx-border-width: 2;">
               <VBox.margin>
                   <Insets/>
               </VBox.margin>
               <padding>
                   <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
               </padding>
               <Label text="Total" textFill="#77d14db2">
                   <font>
                       <Font name="Agency FB" size="26.0"/>
                   </font>
               </Label>
               <Label fx:id="subtotalLabel" text="R$ 54,90" textFill="#78d34e">
                   <font>
                       <Font name="Cantarell Regular" size="37.0"/>
                   </font>
               </Label>
           </VBox>
       </VBox>
   </left>
   <stylesheets>
      <URL value="@../css/menu.css" />
      <URL value="@../css/controls.css" />
   </stylesheets>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
